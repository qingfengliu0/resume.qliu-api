{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "type": "cosmosDB",
      "name": "inputDocument",
      "databaseName": "recordvisitdb",
      "containerName": "recordvisitcontainer",
      "connection": "CosmosDBConnection",
      "sqlQuery": "SELECT * FROM c WHERE c.id = 'visit_counter'",
      "direction": "in"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "outputDocument",
      "databaseName": "recordvisitdb",
      "containerName": "recordvisitcontainer",
      "createIfNotExists": "true",
      "connection": "CosmosDBConnection"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ]
}